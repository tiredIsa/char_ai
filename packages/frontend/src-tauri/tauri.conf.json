{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "char.fxck",
  "version": "0.1.0",
  "identifier": "ru.charfxck.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "char.fxck",
        "width": 600,
        "height": 800,
        "fullscreen": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "android": {
      "minSdkVersion": 24
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
